import java.util.*;

class Main {
  static int indexOf(String st, String k) {
    char key = k.charAt(0);

    for (int i = 0; i < st.length(); i++) {
      if (st.charAt(i) == key) {
        return i;
      }
    }
    return -1;
  }

  public static void main(String[] args) {
    Scanner scan = new Scanner(System.in);
    String st = scan.nextLine();
    String k = scan.nextLine();
    System.out.println(indexOf(st, k));
  }
}
